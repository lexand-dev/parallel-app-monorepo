    "graphql-upload": "^17.0.0",
    "nestjs-cls": "^6.0.1",
    "nestjs-zod": "^5.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-morph": "^25.0.1",
    "uploadthing": "^7.7.2",
    "zod": "^3.25.49"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
